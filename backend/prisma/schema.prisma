generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ads {
  id    String @id @default(uuid())
  title String
  slug  String @unique
  description String
  price Float
  contact String
  images      Image[]
  category    Category
}

model Image {
  id      String @id @default(uuid())
  url     String
  adId    String
  ad      Ads    @relation(fields: [adId], references: [id], onDelete: Cascade)
}

enum Category {
  CLOTHES
  ELECTRONICS
  FURNITURE
  TOYS
  BOOKS
}